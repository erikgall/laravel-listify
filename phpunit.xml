<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="./tests/bootstrap.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="true"
>
    <testsuites>
        <testsuite name="Listify Test Suite">
            <directory suffix=".php" phpVersion="5.6.0" phpVersionOperator=">=">./tests</directory>
        </testsuite>
    </testsuites>

    <php>
        <ini name="display_errors" value="true"/>
    </php>

    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true" addUncoveredFilesFromWhitelist="false">
            <file>src/Listify.php</file>
            <file>src/Config.php</file>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="build/logs" lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
    </logging>
</phpunit>